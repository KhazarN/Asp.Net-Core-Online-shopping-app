@model ProductDetailsViewModel

<div class="row">
    <div class="col-md-3">
        <img src="~/images/@Model.Product.ImageUrl" class="img-fluid" />
    </div>
    <div class="col-md-9">
        <h1 class="mb-3">@Model.Product.Name</h1> <hr />
        @foreach (var category in Model.Categories)
        {
            <a asp-controller="Shop" asp-action="List" asp-route-id="@category.CategoryId" class="btn btn-link p-0 mb-3">@category.Name</a>
        }
    <div class="mb-3">
        <h4 class="text-primary mb-3">
            <i class="fas fa-dollar-sign"></i>   @Model.Product.Price
        </h4>
        <form asp-controller="Card" asp-action="AddToCard" method="post" class="form-inline">
            <input type="hidden" name="productId" value="@Model.Product.ProductId" />
            <div class="input-group mb-3">
                <input type="number" class="form-control" min="1" step="1" name="quantity" value="1" style="width:100px" />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-card-plus"></i>Add to card
                    </button>
                </div>
            </div>
        </form>
    </div>
    </div>
</div>
<div class="row">
    <p class="p-3">@Model.Product.Description</p>
</div>
