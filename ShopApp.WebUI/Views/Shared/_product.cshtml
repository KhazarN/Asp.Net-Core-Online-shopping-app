@model Product

<div class="card mb-2">
    <img class="card-img-top" src="~/images/@Model.ImageUrl" />
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <small class="text-muted">
            <i class="fas fa-dollar-sign"></i> @Model.Price
        </small>
    </div>
    <div>
        <div class="card-footer text-center">
            <a asp-controller="Shop" asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-primary btn-sm">Details</a>
            <a asp-controller="Shop" asp-action="AddToCard" asp-route-id="@Model.ProductId" class="btn btn-primary btn-sm">Add to card</a>
        </div>
    </div>
</div>