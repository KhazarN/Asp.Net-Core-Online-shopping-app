@model UserDetailsViewModel

<h1 class="h3">Edit User Roles</h1>
<hr>

<div class="row">
    <div class="col-md-8">
            <div class="row">
                <label class="row-cols-6" asp-for="FirstName">Name: @Model.FirstName</label>
            </div>
            <div class="row">
                <label class="row-cols-6" asp-for="LastName">Lastname: @Model.LastName</label>
            </div>
            <div class="row">
                <label class="row-cols-6" asp-for="UserName">Username: @Model.UserName</label>
            </div>
            <div class="row">
                <label class="row-cols-6" asp-for="Email">Email: @Model.Email</label>
            </div>
        </div>

        <form asp-controller="AdminUsers" asp-action="EditUser" method="post">
            <div class="row">
                <input type="hidden" asp-for="UserId" />

                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                @foreach (var role in ViewBag.Roles)
                {
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input"
                               name="selectedRoles" value="@role"
                               id="@role"
                               @(Model.SelectedRoles.Any(p => p == role) ? "checked" : "") />
                        <label class="custom-control-label" for="@role">@role</label>
                    </div>
                }

                <hr />
            </div>
        </form>
    </div>

@section Scripts{
    <script src="~/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}