@model IEnumerable<IdentityRole>

<div class="row">
    <div class="col-md-12">
        <h1 class="h3">Role list</h1>
        <hr />
        <a asp-controller="AdminRole" asp-action="CreateRole" class="btn btn-primary btn-sm mb-2">Add Role</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td style="width:250px">Id</td>
                    <td>Role Name</td>
                    <td style="width:160px"></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                <a asp-controller="AdminRole" asp-action="EditRole" asp-route-id="@item.Id" name="id" class="btn btn-primary btn-sm mr-2">Edit</a>
                                <form asp-action="DeleteRole" asp-controller="AdminRole" asp-route-id="@item.Id" method="post" style="display:inline">
                                    <input type="hidden" asp-for="@item.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>No Roles</h3>
                    </div>
                }


            </tbody>
        </table>
    </div>
</div>