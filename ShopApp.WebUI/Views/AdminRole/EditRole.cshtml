@model RoleDetails

<h1 class="h3">Edit Role</h1>
<hr>

<div class="row">
    <div class="col-md-12">
        <form asp-controller="AdminRole" asp-action="EditRole">
            <input type="hidden" name="roleId" value="@Model.Role.Id" />
            <input type="hidden" name="roleName" value="@Model.Role.Name" />

            <h6 class="bg-info text-white p-1">Add to @Model.Role.Name</h6>
            <table class="table table-bordered table-sm">
                @if (Model.NonMembers.Count() == 0)
                {
                    <tr>
                        <td colspan="2">All users are in this role</td>
                    </tr>
                }

                else
                {
                    @foreach (var user in Model.NonMembers)
                    {
                        <tr>
                            <td>
                                @user.UserName
                            </td>
                            <td style="width:100px">
                                <input type="checkbox" name="idToAdd" value="@user.Id" />
                            </td>
                        </tr>
                    }
                }
            </table>

            <hr />

            <h6 class="bg-info text-white p-1">Delete from @Model.Role.Name</h6>
            <table class="table table-bordered table-sm">
                @if (Model.Members.Count() == 0)
                {
                    <tr>
                        <td colspan="2">No users in this role</td>
                    </tr>
                }

                else
                {
                    @foreach (var user in Model.Members)
                    {
                        <tr>
                            <td>
                                @user.UserName
                            </td>
                            <td style="width:100px">
                                <input type="checkbox" name="idToDelete" value="@user.Id" />
                            </td>
                        </tr>
                    }
                }
            </table>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>